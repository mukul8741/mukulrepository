<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">
  
  <selection name="contact.type.selection">
    <option value="primary">Primary</option>
    <option value="secondary">Secondary</option>
    <option value="others">Others</option>
  </selection>
  
  <grid model="com.axelor.gst.db.Contact"
    title="Contact" name="contact-grid">
    <field name="name" required="true" />
    <field name="type" required="true" />
    <field name="primaryEmail" />
    <field name="secondaryEmail" />
    <field name="primaryPhone" />
    <field name="secondaryPhone" />
  </grid>
  
  <form model="com.axelor.gst.db.Contact"
    title="Contact" name="contact-form">
    <panel>
     <field name="name" required="true" />
     <field name="type" required="true" />
     <field name="primaryEmail" />
     <field name="secondaryEmail" />
     <field name="primaryPhone" />
     <field name="secondaryPhone" />
    </panel>
  </form>
</object-views>